<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="preChatItem"
            type="com.androiddevelopers.freelanceapp.model.PreChatModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        tools:context=".view.chat.ChatsFragment">



        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/chatImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/chatNameAndMessageLayout"
            app:layout_constraintStart_toEndOf="@+id/chatImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/chatName"
                android:layout_width="match_parent"
                android:text="@{preChatItem.receiverName}"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="25"
                android:textColor="@color/normal_text_color"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="John Doe" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/unreadMessageIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/unread_message_indicator"
                    app:layout_constraintTop_toTopOf="@+id/chatLastMessage"
                    app:layout_constraintBottom_toBottomOf="@+id/chatLastMessage"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:paddingEnd="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:ellipsize="end"
                    android:id="@+id/chatLastMessage"
                    android:text="@{preChatItem.lastMessage}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:textColor="@color/GREY"
                    android:textSize="18sp"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            app:layout_constraintTop_toTopOf="@id/chatNameAndMessageLayout"
            app:layout_constraintEnd_toEndOf="@id/chatNameAndMessageLayout"
            android:id="@+id/chatLastMessageTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/GREY"
            android:textSize="16sp"
            tools:text="12:30 PM" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
